<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="1"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card:elevation="4dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true"

            >


            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


                <RelativeLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image1"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/pregnancyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Pregnancy"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/pregnancyText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/pregnancyText"
                        android:gravity="center"
                        android:text="12 Weeks"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />


                    <!-- <TextView
                         android:id="@+id/pregnancyText3"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/pregnancyText2"

                         android:layout_marginLeft="20dp"
                         android:layout_toRightOf="@+id/pregnancyText"
                         android:gravity="center"
                         android:text="1st trimester"
                         android:textColor="@color/colorBlack"
                         android:textSize="18dp" />

                     <TextView
                         android:id="@+id/pregnancyText4"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/pregnancyText3"

                         android:layout_marginLeft="20dp"
                         android:layout_toRightOf="@+id/pregnancyText"
                         android:gravity="center"
                         android:text="196 days left"
                         android:textColor="@color/colorBlack"
                         android:textSize="18dp" />-->

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row1"
                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:weightSum="1.0">

                    <TextView
                        android:id="@+id/pregnancyText5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="@string/babydimentions"
                        android:textColor="@color/colorPrimary" />
<!--
                    <Button
                        android:id="@+id/fb"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/pregnancyText5"
                        android:layout_weight=".4"
                        android:background="@color/colorBlue"
                        android:drawableLeft="@drawable/fb"
                        android:paddingLeft="15dp"
                        android:text="@string/share"
                        android:textColor="@color/colorAccent" />-->


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/week"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/length" />

                            <TextView
                                android:id="@+id/length"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <View
                            android:id="@+id/SplitLine_hor1"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weight" />

                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <View
                            android:id="@+id/SplitLine_hor"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"

                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Sizeof" />

                            <TextView
                                android:id="@+id/sizeof"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_below="@+id/middle"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/dunu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".2"
            android:background="@color/colorAccent"
            android:src="@drawable/previous" />


        <com.pregnancy.utils.TextProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:max="40"
            android:maxHeight="80dip"
            android:minHeight="50dip"
            android:progress="1" />

        <ImageButton
            android:id="@+id/lulu2"
            android:onClick="onClick_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".2"
            android:focusableInTouchMode="true"
            android:background="@color/colorAccent"
            android:src="@drawable/next" />



    </LinearLayout>

</LinearLayout>
