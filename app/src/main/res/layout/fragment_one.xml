<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card:elevation="4dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true"

            >


            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Hello Card" />


                <RelativeLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image1"
                    android:padding="8dp"
                    >

                    <TextView
                        android:id="@+id/pregnancyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pregnancy"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/pregnancyText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/pregnancyText"
                        android:gravity="center"
                        android:text="12 Weeks"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />


                   <!-- <TextView
                        android:id="@+id/pregnancyText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pregnancyText2"

                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/pregnancyText"
                        android:gravity="center"
                        android:text="1st trimester"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/pregnancyText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pregnancyText3"

                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/pregnancyText"
                        android:gravity="center"
                        android:text="196 days left"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />-->

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row1"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1.0"
                    android:padding="8dp"
                    >

                    <TextView
                        android:id="@+id/pregnancyText5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Baby dimentions:"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/pregnancyText5"
                        android:layout_weight=".4"
                        android:background="@color/colorBlue"
                        android:drawableLeft="@drawable/fb"
                        android:paddingLeft="15dp"
                        android:text="Share"
                        android:textColor="@color/colorAccent" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/week"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="8dp"
                        >


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Length" />

                            <TextView
                              android:id="@+id/length"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Length" />




                        </LinearLayout>

                        <View
                            android:id="@+id/SplitLine_hor1"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                          android:padding="5dp"
                            android:layout_weight=".33"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight" />

                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                        <View
                            android:id="@+id/SplitLine_hor"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                           android:padding="5dp"

                            android:layout_weight=".33"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size of" />

                            <TextView
                                android:id="@+id/sizeof"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="bla" />


                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
